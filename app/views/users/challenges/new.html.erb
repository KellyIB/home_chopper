<h2>New Challenge</h2>
  <%= form_for @challenge, url: "/users/#{current_user.id}/challenges", method: :post do |f| %>
  <%= f.select :time_limit, [['20','twenty'],['40','forty'],['60','sixty']], {}, :id=>"time_limit" %>
  <%= f.select :basket_size, [['Three Ingredients','three'],['Five Ingredients','five'],['Seven Ingredients','seven']], {}, :id=>"basket_size" %>
  <%= f.select :meal_type, [['Breakfast','breakfast'],['Lunch','lunch'],['Dinner','dinner'],['Snack','snack'],['Dessert','dessert']], {}, :id=>"meal_type" %>
  <%= f.submit "Start New Game"  %>
<% end %>
