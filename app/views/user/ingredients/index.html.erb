<h1>My Pantry</h1>

  <% if @ingredients %>
    <p class='ingredients'>
      <% @ingredients.each do |food| %>
        <section id= 'ingredient-<%=food.id%>'>
          <%= food.name %>
          <%= button_to "Remove From Pantry", "/user/#{current_user.id}/ingredients/#{food.id}", method: :delete %>
         </section>

    <% end %></p>
  <% end %>

  <section id="item_add">
    <h3>Add An Item To Your Pantry</h3>

    <%= form_tag "/user/#{current_user.id}/ingredients", method: :post do %>
       <%= label_tag :name %>
       <%= text_field_tag :name%>

       <%= submit_tag 'Add Item To Pantry' %>
    <% end %>
  </section>
